
<%- include("../partial/admin/header.ejs") %> 
<div class="content">
<div class="form control d-flex justify-content-center align-items-center flex-column">
    <h1>EDIT CATEGORY</h1>
    <div style="width: 30rem; height: 50rem;">
      <form action="/admin/category/<%= editCategoryData._id %>" method="post">
        <div class="form-floating mb-3">
          <input type="text" class="form-control" id="floatingInput" name="category" placeholder="product name"
            value="<%= editCategoryData.Category %>">
          <label for="floatingInput">Category Name</label>
        </div>
        <div class="form-floating mb-3">
          <input type="text" class="form-control" id="floatingInput" name="discription" placeholder="Discriiption"
            value="<%= editCategoryData.Discription %>">
          <label for="floatingInput">Discriiption</label>
        </div>
        <div class="mb-3">
          <label for="status">Status</label>
          <select class="form-select" id="status" name="status" required>
              <option value="Listed" <%= editCategoryData.Status === 'Listed' ? 'selected' : '' %>>Listed</option>
              <option value="Unlisted" <%= editCategoryData.Status === 'Unlisted' ? 'selected' : '' %>>Unlisted</option>
          </select>
      </div>
  
        <div class="pt-5 mb-4 ">
          <td> <button type="submit" class="btn btn-primary">EDIT</button></td>
        </div>
      </form>
    </div>
  </div>
  </div>

  <%- include('../partial/admin/footer.ejs') %>
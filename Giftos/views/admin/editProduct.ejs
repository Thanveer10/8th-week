<%- include('../partial/admin/header.ejs') %>
       <!-- Content Start -->
       <div class="content mb-5">
        <div class="form control d-flex justify-content-center align-items-center flex-column">
            <h1>Edit Product</h1>
            <div style="width: 30rem; height: 50rem;">
              <form action="/product/productList/<%= product._id %>" method="post" enctype="multipart/form-data" name="submission"   onsubmit="return addeditpost()" oninput="clearform()">
             
                <div class="form-floating mb-3">
                  <input type="text" class="form-control" id="productname" name="productname" placeholder="product name"
                    value="<%= product.Productname %>">
                  <label for="floatingInput">Product Name</label>
                </div>
                <p class="text-danger  text-center"></p>
          
                <div class="form-floating mb-3">
                  <input type="text" class="form-control" id="stock" name="stock" placeholder="stock" value="<%= product.Stock%>">
                  <label for="floatingInput">Stock</label>
                </div>
                <p class="text-danger  text-center"></p>


                <div class="form-floating mb-3">
                  <input type="text" class="form-control" id="maxPerPerson" name="maxPerPerson" placeholder="maxPerPerson" value="<%= product.MaxPerPerson%>">
                  <label for="floatingInput">Max Per Person</label>
                </div>
                <p class="text-danger  text-center"></p>
          
                <div class="form-floating mb-3">
                  <input type="text" class="form-control" id="regularPrice" name="regularPrice" placeholder="regularPrice" value="<%= product.RegularPrice %>">
                  <label for="floatingInput">Regular Price</label>
                </div>
                <p class="text-danger  text-center"></p>

                <div class="form-floating mb-3">
                  <input type="text" class="form-control" id="salePrice" name="salePrice" placeholder="sale Price" value="<%= product.SalePrice %>">
                  <label for="floatingInput">Sale Price</label>
                </div>
                <p class="text-danger  text-center"></p>
          
                <!-- <div class="form-floating mb-3">
                  <input type="text" class="form-control" id="stock" name="stock" placeholder="stock" value="{{edit.stock}}">
                  <label for="floatingInput">Stock</label>
                </div> -->
                <!-- <p class="text-danger  text-center"></p> -->
          

                <div class="form-group">
                  <label for="tech" class="col-sm-3 control-label">Category</label>
                  <div class="col-md-5">
                    <select class="form-control" name="category" id="category" >
                      <% for(let i=0;i < categorynew.length; i++) { %>
                        
                        <option value="<%= categorynew[i].Category %>" <%= product.Category.Category === categorynew[i].Category ? 'selected' : '' %> >
                          <%= categorynew[i].Category %>
                        </option>
                      <% }; %>
                    </select>
                  </div>
                </div>

                <div class="form-floating mb-3">
                  <input type="text" class="form-control" id="discription" name="discription" placeholder="Description"
                    value="<%= product.Discription %>">
                  <label for="floatingPassword">Description</label>
                </div>
                <p class="text-danger  text-center"></p>
                 

          
                <div class="form-floating">
                  <img src="/productsimg/<%= product.Productimage[0] %>" style="width: 50px; line-height: 50px;" alt="" id="productimage">
                  <input type="file" multiple class="custom-file-input" name="Productimage" placeholder="Image" value="<%= product.Productimage %>"
                    onchange="viewImage(event)">
                </div>
                <p class="text-danger  text-center"></p>
                <div class="pt-5 mb-4 ">
                  <button class="btn btn-dark btn-lg btn-block" type="submit">Update</button>
                </div>
              </form>
            </div>
          </div>
       </div>
    
   </div>
            <!-- footer -->
     <footer class=" footer_section ">
      <div class="container">
        <p>
          &copy; <span id="displayYear"></span> All Rights Reserved By
          <a href="#">GIFTOS</a>
        </p>
      </div>
    </footer>
   
   


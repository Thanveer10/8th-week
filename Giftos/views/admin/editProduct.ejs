      <script src="js/bootstrap.js"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js">
      </script> -->
   
      <!-- <script src="/js/custom.js"></script> -->
      <script src="/js/addProductDetails"></script>
      <script src="/js/addeditpost.js"></script>
      <script>
        function viewImage(event) {
          document.getElementById('productimage').src = URL.createObjectURL(event.target.files[0])
      
        }
      </script>

 </body>
</html>
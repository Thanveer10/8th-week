    <div class="container">
        <h1>Order Details</h1>
        <div class="d-flex justify-content-between">
            <div class="order-info">
                <h2>Order ID: <%= order.orderId %></h2>
                <p><strong>Payment Method:</strong> <%= order.paymentDetails.paymentMethod %></p>
                <p><strong>Payment Status:</strong> <%= order.paymentDetails.status %></p>
                <p><strong>Order Status:</strong> <%= order.orderStatus %></p>
                <% if(order.paymentDetails.refundStatus && order.paymentDetails.paymentMethod === 'Online Payment' && order.orderStatus === 'Cancelled' && order.paymentDetails.status === 'Paid'){ %>
                  <p>Refund Status: <span class="badge badge-success"><%= order.paymentDetails.refundStatus %></span></p>
                  <p>Refund Amount: <strong><%= order.paymentDetails.refundAmount.toFixed(2) %></strong></p>                              
                <% }%>
                <p><strong>Order Date:</strong> <%= new Date(order.date).toLocaleDateString() %></p>
                <p><strong>Total Price:</strong> ₹<%= order.grandTotal.toFixed(2) %></p>
            </div>
            <div class="address-info">
                <h3>Shipping Address</h3>
                <p><strong>Name:</strong> <%= order.shippingAddress.name %></p>
                <p><strong>Phone:</strong> <%= order.shippingAddress.phone %></p>
                <p><%= order.shippingAddress.city %>, <%= order.shippingAddress.state %> - <%= order.shippingAddress.pincode %></p>
            </div>
        </div>

        <div class="items-info mt-4">
            <h2>Items</h2>
            <ul>
                <% order.products.forEach(item => { %>
                    <li>
                        <img src="/productsimg/<%= item.productId.Productimage[0] %>" alt="<%= item.name %>">
                        <div class="item-details">
                            <strong><%= item.productId.Productname %></strong>
                            <p>Price per unit: ₹<%= item.price.toFixed(2) %></p>
                            <p>Sold Price: ₹<%= (item.price-(item.discountAmount/item.quantity)).toFixed(2) %></p>
                            <p>Quantity: <%= item.quantity %></p>
                            <p>Discount: ₹<%= item.discountAmount %></p>
                            <p>Final Price: ₹<%= item.total.toFixed(2) %></p>
                            <!-- <% if (item.orderStatus === 'Ordered') { %>
                                <form action="/user/orders/cancellationForm/<%= order._id %>/<%= item.productId %>" method="GET">
                                    <button type="submit" class="btn btn-danger">Cancel This Product</button>
                                </form>
                            <% } else if (item.orderStatus === 'Delivered') { %>
                                <form action="/user/orders/returnForm/<%= order._id %>/<%= item.productId %>" method="GET">
                                    <button type="submit" class="btn btn-warning">Return This Product</button>
                                </form>
                            <% } %> -->
                        </div>
                    </li>
                <% }); %>
            </ul>
        </div>

        <div class="info">
            <h3 class="summary-title">Order Summary</h3>
            <ul>
                <li><strong>Subtotal:</strong> ₹<%= cartSubtotal.toFixed(2) %></li>
                <li><strong>Coupon Discount:</strong> -₹<%= order.coupenDiscount.toFixed(2) %></li>
                <li><strong>Offer Discount:</strong> -₹<%= totalDiscount.toFixed(2) %></li>
                <li><strong>Shipping Fee:</strong> ₹<%= order.shippingCharge ? order.shippingCharge.toFixed(2) : 0 %></li>
                <li><strong>Total Price:</strong> ₹<%= order.grandTotal.toFixed(2) %></li>
            </ul>
        </div>

        <div class="d-flex justify-content-end">
            <a href="/viewOrder" class="btn btn-primary">Back to Orders</a>
            <a href="/orders/download-invoice/<%= order._id %>" class="btn btn-primary">Download Invoice (PDF)</a>
        </div>
    </div>
</body>
</html>

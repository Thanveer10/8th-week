  <!-- product details-->
  <div class="main-content">
    <div class="container mt-5 mb-5">
        <div class="row d-flex justify-content-center">
            <div class="col-md-10">
                <div class="card">
                    <div class="row d-flex align-items-stretch">
                      <div class="col-md-6" style="background-color: white;" >
                        <div class="images p-2 h-100 " >
                          <div class="text-center product-image image-div">
                            <img id="main-image" src="/productsimg/<%= product.Productimage[0]%>"  class="img-fluid  zoom-img product-image" />
                          </div>
                          <div class="thumbnail text-center"  >
                                    <% product.Productimage.forEach((prod) =>{ %>
                                      <!-- <div style="display: flex; align-items: center;justify-content: center; background-color: gray;"> -->
                                        <img style="border-style: solid;border-color: rgb(75, 71, 71); border-width: 2px; height: 80px; "  onclick="change_image(this)" src="/productsimg/<%= prod %>" width="70" class="img-fluid" >                                              
                                      <!-- </div> -->
                                    <% }) %>
                                </div>
                              </div>
                            </div>
                        <div class="col-md-5">
                            <div class="product p-4  h-100">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="d-flex align-items-center"> <i class="fa fa-long-arrow-left"></i> <span class="ml-1">Back</span> </div>
                                    <i class="fa fa-shopping-cart text-muted"></i>
                                </div>
                                <div class="mt-5 mb-3">
                                    <span class="text-uppercase text-muted brand"><%= product.Brand %></span>
                                    <h3 class="text-uppercase"> <%= product.Productname %> </h3>
                                    <div class="price d-flex flex-row align-items-center">
                                      <% if(product.SalePrice){ %>
                                        <i class="fa-solid fa-indian-rupee-sign" style="color: red; padding:0 5px; font-size: 1.3rem;"></i>
                                        <span  style="text-decoration: line-through; margin-right: 10px;"  class="act-price   product-price"><%= product.RegularPrice%></span>
                                        <span class="act-price   product-price" style="font-weight: bolder;"><%= product.SalePrice%></span>
                                      <% }else{ %>
                                        <i class="fa-solid fa-indian-rupee-sign " style="color: red; padding:0 5px; font-size: 1.3rem;"></i>
                                        <span class="act-price    product-price"><%= product.RegularPrice%></span>
                                     <% } %>
                                      
                                    </div>
                                </div>
                                <p  style="font-size: medium;"  class="about mt-4 " > <%= product.Discription %>.</p>
                                
                                <!-- <p  style="font-size: 1rem; color: rgb(34, 32, 32);"  class="about mt-4 " >Available Stock <%= product.Stock %></p> -->
                                <% if(stockerr){ %>
                                  <p  style="font-size: 1rem; color: rgb(180, 23, 23);"  class="about mt-4 " > <%= stockerr %></p>

                                <% } else { %>
                                  <p  style="font-size: 1rem; color: rgb(34, 32, 32);"  class="about mt-4 " >Available Stock <%= product.Stock %></p>
                               <% } %>

                                <div class="cart mt-5 align-items-center">
                                 <% if(product.Stock < 1){ %>
                                    <button class="btn btn-danger text-uppercase mr-2 px-4" disabled>Out of Stock</button>
                                  <% }else{ %>
                                 <% if(isCartItem){ %>
                                    <button class="btn btn-danger text-uppercase mr-2 px-4 mb-3" onclick="location.href='/adduserCart'" >View Cart</button>
                                 <% }else{ %>
                                    <form action="/addtocart/<%= product._id %>" method="GET">
                                        <button class="btn btn-danger text-uppercase mr-2 px-4  mb-3" type="submit">Add to cart</button>
                                    </form>
                                  <% } %>
                                    
                                   <%  if(iswishItem){ %>
                                    <a href="/wishlist" >
                                      <i class="fa fa-heart text-muted" style="font-size:larger;"> <span style="padding-left: 10px; font-size: medium;">View Wishlist</span></i>
                                    </a>
                                 <% }else{ %>
                                    <a href="/wishlist/<%= product._id %>">
                                      <i class="fa fa-heart text-muted" style="font-size:larger;"> <span style="padding-left: 10px; font-size: medium;">Add To Wishlist</span></i>
                                    </a>
                                <% }%>
                                <% } %>
                                    <!-- <i class="fa fa-share-alt text-muted"></i> -->
                                </div>
                            </div>
                        </div>
                    </div> 
                </div>
            </div>
        </div>
    </div>
   
    <section class="shop_section layout_padding">
      <div class="container">
        <div class="heading_container heading_center">
          <h2>
            Related Products
          </h2>
        </div>
  
        <div class="row">
          <% related_products.forEach(product=>{ %>
            <div class="col-sm-6 col-md-4 col-lg-4">
              <div class="box prod-box">
                <a href="/productdetails/<%= product._id %>">
                  <div class="img-box">
                    <img src=" /productsimg/<%= product.Productimage[0] %>" alt="Product Image" >
                  </div>
                  <div class="detail-box">
                    <h6>
                     <%= product.Productname %>
                    </h6>
                    <h6>
                   
                      <span>
                       <% if(product.SalePrice > 0 && product){ %>
                          <i class="fa-solid fa-indian-rupee-sign" style="color: rgb(240, 91, 91); padding:0 5px; font-size: 1.1rem;"></i>
                          <span  style="text-decoration: line-through; margin-right: 10px;"  class="act-price   product-price"><%= product.RegularPrice%></span>
                          <span class="act-price   product-price" style="font-weight: bolder;"><%= product.SalePrice%></span>
                       <% }else{ %>
                          <i class="fa-solid fa-indian-rupee-sign" style="color: rgb(233, 74, 74); padding:0 5px; font-size: 1.1rem;"></i>
                           <span  style=" margin-right: 10px;"  class="act-price   product-price"><%= product.RegularPrice%></span>
                     <% } %>
                        <!-- <i class="fa-solid fa-indian-rupee-sign"></i> -->
                      </span>
                    </h6>
                  </div>
                  <!-- <div class="new">
                    <span>
                      New
                    </span>
                  </div> -->
                </a>
              </div>
              </div>
         <% }) %>
         </div>
        <!-- </div> -->
        <div class="btn-box">
          <a href="/product/products">
            View All Products
          </a>
        </div>

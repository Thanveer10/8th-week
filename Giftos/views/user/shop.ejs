    <!-- shop section -->
    <section class="shop_section layout_padding">
      <div class="container">
        <div class="heading_container heading_center">
          <h2>
            Latest Products
          </h2>
        </div>
        <div class="row">
          <% latestProducts.forEach(product=>{ %>

            <div class="col-sm-6 col-md-4 col-lg-4">
              <div class="box prod-box">
                <a href="/productdetails/<%= product._id %>">
                  <div class="img-box">
                    <img src=" productsimg/<%= product.Productimage[0] %>" alt="Product Image" >
                    <!-- <img src="images/p1.png" alt=""> -->
                  </div>
                  <div class="detail-box">
                    <div style="margin-bottom: 10px;">
                      <h6>
                       <%= product.Productname %>
                      </h6>
                    </div>
                    
                    <div>
                      <h6>
                        <% if(product.SalePrice){ %>
                          <span style="text-decoration: line-through;">
                            <i class="fa-solid fa-indian-rupee-sign"></i>
                            <%= product.RegularPrice %>
                          </span>
                            <span style="padding-left: 5px;"> <i class="fa-solid fa-indian-rupee-sign"></i> <%= product.SalePrice %></span>
                        <% }else{ %>
                          <span>
                            <i class="fa-solid fa-indian-rupee-sign"></i>
                            <%= product.RegularPrice %>
                          </span>
                       <% } %>
                      </h6>
                    </div>
                  </div>
                  <div class="new">
                    <span>
                      New
                    </span>
                  </div>
                </a>
              </div>
            </div>
        <% }) %>
        </div>

        <div class="pagination-container">
          <% if (currentPage > 1) { %>
          <a href="?page=<%= currentPage - 1 %>">&laquo; Previous</a>
          <% } %> 
          <% for (let i = 1; i <= totalPages; i++) { %>
             <% if (i ===currentPage) { %>
            <span class="current-page"><%= i %></span>
            <% } else { %>
            <a   href="?page=<%= i %>"><%= i %></a>
            <% } %>
           <% } %> 
          <% if (currentPage < totalPages) { %>
          <a href="?page=<%= Number(currentPage) + 1 %> ">Next &raquo;</a>
          <% } %>
        </div>
        
        <div class="btn-box">
          <a href="/product/products">
            View All Products
          </a>
        </div>
      </div>
    </section>

    <!-- end shop section -->


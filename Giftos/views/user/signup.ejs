                <p id="nameError" class="error"></p>
              </div>
              <div class="form-outline" style="flex: 1;">
                <input id="form2Example22" class="form-control" type="text" name="lastname" required placeholder="Last Name" />
                <p id="lastnameError" class="error"></p>
              </div>
            </div>

            <div class="d-flex justify-content-between mb-3">
              <div class="form-outline me-2" style="flex: 1;">
                <input id="email" class="form-control" type="email" name="email" required placeholder="Email" />
                <p id="emailError" class="error"></p>

              </div>
            
              <div class="form-outline" style="flex: 1;">
                <input id="mob" class="form-control" type="text" name="phonenumber" required placeholder="Phone Number"  />

<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display&display=swap" rel="stylesheet">

    <title>Gitos Login</title>

    <style>
      html, body {
        height: 100%;
        width: 100%;
        margin: 0;
        padding: 0;
        display: flex;
      }
      .left-side {
        background-color: rgb(224, 148, 174);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
      }
      .right-side {
        background-color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        color: rgb(80, 80, 80);
        font-family: 'Playfair Display', serif;
      }
      .btn {
        color: white;
        background-color: rgb(224, 148, 174);
      }
      .btn:hover {
        background-color: white;
        outline: 2px solid rgb(224, 148, 174);
        border-radius: 5px;
      }
      .forgot-password-link {
        color: rgb(67, 96, 240);
        text-decoration: none;
      }
      .forgot-password-link:hover {
        color: rgb(14, 7, 114);
      }
    </style>
  </head>
  <body>
    <div class="row w-100 h-100">

      <!-- Right Side -->
      <div class="col-md-5 right-side">
        <h1>Welcome to Giftos!</h1>
        <p>Discover amazing gifts and manage your account effortlessly.</p>
      </div>
          <!-- Left Side -->
      <div class="col-md-7 left-side">
        <div class="card rounded-3 text-black" style="width: 90%; max-width: 600px; box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.25);">
          <div class="card-body">
            <div class="text-center">
              <img src="https://png.pngtree.com/png-vector/20191125/ourmid/pngtree-beautiful-admin-roles-line-vector-icon-png-image_2035379.jpg" style="width: 110px;" alt="logo">
              <h3 class="mt-1 mb-4 pb-2" style="font-family: 'Playfair Display', serif; font-weight: bold; letter-spacing: 1.5px;">Sign in</h3>

              <% if(typeof err !== 'undefined' || typeof message !=='undefined'){ %>
                <h3 style="color: red; font-size: medium;"><%= err %></h3>
                <h3 style="color: rgb(10, 161, 22); font-size: medium;"><%= message %></h3>
              <% } %>
            </div>

            <form onsubmit="return " oninput="clearform()" action="/login" method="post" >
              <p style="color: rgb(48, 46, 46);">Dont have an account? <span > <a href="/signup" style="text-decoration: none; font-family: 'Playfair Display', serif; color: blue; margin-left: 4px;">Sign Up</a></span></p>
              
              <div class=" mb-3 mx-3" >
              <div class="form-outline mb-3">
              <input type="email" id="form2Example11" class="form-control "
              placeholder="Email" name="email" required/>
              </div>
              <div class="form-outline" >
              <input type="password" id="form2Example22" class="form-control " name="password" placeholder="Password" required/>
              <input type="checkbox" id="passwordToggle"><label style=" font-family: 'Playfair Display', serif; margin-left: 5px; color: rgb(78, 75, 75);">Show password</label> 
              </div>
              </div>
              
              <div class="text-center pt-1 mb-4">
              <button style="background-color: rgb(224, 148, 174); color: white; padding: 7px 35px;" class="btn btn-block gradient-custom-2 mb-0" type="submit" value="login"><span>Log In</span></button>
              </div>
              
              <div class="d-flex align-items-center justify-content-center pb-3 hover-overlay">
              <a href="/forgotpassword" class="forgot-password-link " >Forgot Password?</a>
              </div>
              
              <h5 class="text-center mt-0"><span>Or</span></h5>
              
              <div class="d-flex justify-content-between">
              <a href="/auth/google" class="btn btn-block flex-fill mx-1" >
              <i class="bi bi-google"></i> <span>Sign in with Google</span>
              </a>
              <a href="/otp_login" class="btn btn-block flex-fill mx-1" >
              <i class=""></i><span>Sign in with OTP</span>
              </a>
              </div>
              <!-- <div class="d-flex align-items-center justify-content-center pb-3">
              <p class="mb-0 me-2">Don't have an account?</p>
              <a class="btn btn-outline-dark" href="/otp_login" role="button" style=" font-family: 'Playfair Display', serif;">Sign in With OTP</a>
              </div> -->
              </form>
          </div>
        </div>
      </div>
    



    </div>

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.css">

    <script>
      const passwordField = document.getElementById("form2Example22");
      const passwordToggle = document.getElementById("passwordToggle");

      passwordToggle.addEventListener("click", () => {
        passwordField.type = passwordField.type === "password" ? "text" : "password";
      });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  </body>
</html>

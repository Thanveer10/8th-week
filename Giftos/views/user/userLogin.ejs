 <body class="d-flex flex-column min-vh-100" >
   <h1 ><span>GIFTOS</span></h1>

   <section class="h-100 " >
      <div class="container py-5 h-80">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col-xl-6  ">
            <div class="card  rounded-3  text-black"  style="box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.25)" >
              <div class="row g-0 rounded-3 ">
                <div class="col-lg-12 col-md-6">
                  <div class="card-body p-md-4 mx-md-3">

                    <div class="text-center">
                      <img src="https://png.pngtree.com/png-vector/20191125/ourmid/pngtree-beautiful-admin-roles-line-vector-icon-png-image_2035379.jpg" style="width: 110px;" alt="logo " >
                      <h3 class="mt-1 mb-4 pb-2" style="font-family: 'Playfair Display', serif; font-weight: bold;letter-spacing: 1.5px;" >Sign in</h3>
                      
                      <% if(typeof err !== 'undefined' || typeof message !=='undefined'){ %>
                          <h3 style="color: red; font-size: medium;"><%= err %></h3>
                          <h3 style="color: rgb(10, 161, 22); font-size: medium;"><%= message %></h3>

                        
                      <% } %>
                    
                    </div>

                    <form onsubmit="return " oninput="clearform()" action="/login" method="post"  >
                      <p>Dont have an account? <span > <a href="/signup" style="text-decoration: none; font-family: 'Playfair Display', serif; color: blue; margin-left: 4px;">Sign Up</a></span></p>

                      <div class="d-flex justify-content-between mb-3">
                        <div class="form-outline me-2" style="flex: 1;">
                          <input type="email" id="form2Example11" class="form-control"
                            placeholder="Email" name="email"  required/>
                        </div>
                        <div class="form-outline" style="flex: 1;">
                          <input type="password" id="form2Example22" class="form-control" name="password" placeholder="Password" required/>
                          <input type="checkbox" id="passwordToggle"><label style=" font-family: 'Playfair Display', serif; margin-left: 5px;">Show password</label> 
                        </div>
                      </div>

                      <div class="text-center pt-1 mb-4">
                        <button  style="background-color: rgb(224, 148, 174); color: white;  padding: 7px 35px;" class="btn  btn-block gradient-custom-2 mb-0" type="submit" value="login"><span>Log In</span></button>
                      </div>

                       <div class="d-flex align-items-center justify-content-center pb-3  hover-overlay">
                         <a href="/forgotpassword" class="forgot-password-link " >Forgot Password?</a>
                       </div>

                       <h5 class="text-center mt-0"><span>Or</span></h5>

                       <div class="d-flex justify-content-between">
                        <a href="/auth/google" class="btn  btn-block flex-fill mx-1" >
                          <i class="bi bi-google"></i> <span>Sign in with Google</span>
                        </a>
                        <a href="/otp_login" class="btn  btn-block flex-fill mx-1" >
                          <i class=""></i><span>Sign in with OTP</span>
                        </a>
                      </div>
                      <!-- <div class="d-flex align-items-center justify-content-center pb-3">

<!-- Specify the layout to use -->
<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    

    <title>User-Admin-Web-Application</title>
    
  </head>
  <body class="d-flex flex-column min-vh-100" >
<h3>User Login page</h3>

<section class="h-100 gradient-form" style="background-color: #eee;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-xl-6">
        <div class="card rounded-3 text-black">
          <div class="row g-0">
            <div class="col-lg-12">
              <div class="card-body p-md-4 mx-md-3">

                <div class="text-center">
                  <img src="https://png.pngtree.com/png-vector/20191125/ourmid/pngtree-beautiful-admin-roles-line-vector-icon-png-image_2035379.jpg"
                    style="width: 120px;" alt="logo">
                  <h4 class="mt-1 mb-4 pb-1">Welcome to UserAdminHub</h4>
                  
                  <% if(typeof message !== 'undefined'){ %>
                      <h3><%= message %></h3>
                  <% } %>
                
                </div>

                <form action="/login" method="post">
                  <p>Please login to your account</p>

                  <div class="d-flex justify-content-between mb-3">
                    <div class="form-outline me-2" style="flex: 1;">
                      <input type="email" id="form2Example11" class="form-control"
                        placeholder="Email" name="email"  required/>
                    </div>
                    <div class="form-outline" style="flex: 1;">
                      <input type="password" id="form2Example22" class="form-control" name="password" placeholder="Password" required/>
                      <input type="checkbox" id="passwordToggle"><label for="">Show password</label>

                    </div>
                  </div>

                  <div class="text-center pt-1 mb-4">
                    <button class="btn btn-primary btn-block gradient-custom-2 mb-2" type="submit" value="login">Log in</button>
                  </div>

                  <div class="d-flex align-items-center justify-content-center pb-3">
                    <p class="mb-0 me-2">Don't have an account?</p>
                    <a class="btn btn-outline-danger" href="/signup" role="button">Sign Up</a>
                  </div>
                </form>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<footer class="bg-dark text-white text-center py-4">
  <div class="container">
      <div class="row">
          <div class="col">
              <!-- Social Media Icons using Bootstrap Icons -->
              <a href="#" class="text-white mx-2" aria-label="Facebook">
                  <i class="bi bi-facebook"></i>
              </a>
              <a href="#" class="text-white mx-2" aria-label="Instagram">
                  <i class="bi bi-instagram"></i>
              </a>
              <a href="#" class="text-white mx-2" aria-label="Snapchat">
                  <i class="bi bi-snapchat"></i>
              </a>
              <a href="#" class="text-white mx-2" aria-label="Pinterest">
                  <i class="bi bi-pinterest"></i>
              </a>
              <a href="#" class="text-white mx-2" aria-label="Twitter">
                  <i class="bi bi-twitter"></i>
              </a>
              <a href="#" class="text-white mx-2" aria-label="LinkedIn">
                  <i class="bi bi-linkedin"></i>
              </a>
          </div>
      </div>
      <p class="mt-3">
          Powered by <a href="#" class="text-white" target="_blank">UserAdminHub</a>
      </p>
  </div>
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.css">
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>
<script>
  const passwordField = document.getElementById("form2Example22")
const passwordToggle = document.getElementById("passwordToggle")

  passwordToggle.addEventListener("click", () => {
      if(passwordField.type === "password"){
          passwordField.type = "text"
      }else{
          passwordField.type = "password"
      }
  })

</script>
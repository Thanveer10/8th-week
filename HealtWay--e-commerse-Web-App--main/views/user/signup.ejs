<%-include("../../views/partials/user/header")%>
<link rel="stylesheet" href="/css/userCss/signup.css">
 <!-- Sign-Up Form Section -->
 <div class="signup-container">
    <div class="container">
        <div class="signup-container">
            <h2 class="text-center">Create Your Account</h2>
            <form id="signupForm" action="/signup" method="post">
                <div class="form-group">
                    <label for="name">Full Name:</label>
                    <input type="text" id="name" name="name" class="form-control">
                    <div class="error text-danger" id="nameError"></div>
                </div>
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" class="form-control" required>
                    <div class="error text-danger" id="emailError"></div>
                </div>
                <div class="form-group">
                    <label for="phone">Phone Number:</label>
                    <input type="tel" id="phone" name="phone" class="form-control" required>
                    <div class="error text-danger" id="phoneError"></div>
                </div>
                <div class="form-group">
                    <label for="password">Password:</label>
                    <input type="password" id="password" name="password" class="form-control" required>
                    <div class="error text-danger" id="passwordError"></div>
                </div>
                <div class="form-group">
                    <label for="confirm-password">Confirm Password:</label>
                    <input type="password" id="confirm-password" name="confirmPassword" class="form-control" required>
                    <div class="error text-danger" id="confirmPasswordError"></div>
                     <!-- Backend error message -->
                     <% if (locals.message && message.length > 0) { %>
                        <div class="alert alert-danger mt-3 text-center error-message">
                            <%= message %>
                        </div>
                        <% } %>
                </div>
                <div class="form-group">
                    <label for="referral">Referral Code (Optional):</label>
                    <input type="text text-danger" id="referral" name="referralCode" class="form-control">
                </div>
                <button type="button" class="signup-btn btn btn-success btn-block" id="signupBtn">Sign Up</button>
                <div id="formError" class="error text-danger text-center mt-2"></div>
                <p class="text-center mt-3">or</p>
                <a href="/auth/google" class="btn btn-outline-primary btn-block" >
                    <i class="bi bi-google"></i> Sign Up with Google
                </a>
            </form>
        </div>
    </div>





    <script src="/js/userJs/signupValidation.js"></script>
<%-include("../../views/partials/user/footer")%>